/* Page/Club/Modify/modify.wxss */
.body{width: 100%;height: 100%;overflow: hidden}
.line{width: auto;height: 36px;margin-top: 20px;border-top:1px solid #eee;border-bottom: 1px solid #eee;background: #fff;}
.line text{display: inline-block;width: 20%;line-height: 36px;text-align: center;float: left}
.line input{display: inline-block;width: 70%;height:100%;overflow: hidden;float: left}
.descript{width: auto;height: auto;background: #fff;padding: 0 15px}
.descript text{display: block;margin-bottom: 10px;padding-top:10px;font-size: 13px;}
.descript textarea{display: block;height: 100px;font-size: 13px;}
.save{display: block;width: 90%;background: #2196f3;color: #fff;margin-top: 30px;}
.clubName{font-size: 26rpx}

  /* 选中后对勾样式 */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 22rpx;
  height: 22rpx;
  line-height: 22rpx;
  text-align: center;
  font-size:22rpx;
  color:#fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/* 单选 */
.radio-group {

}
.radio-group label {
  display: block;
  height: 86rpx;
  line-height: 86rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #e2e2e2;
  box-sizing: border-box;
  padding: 0 20rpx;
}

radio {
  width: 38rpx;
}

/* 单选框未选中 */
radio .wx-radio-input {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}


/* 单选框选中后对勾样式 */
radio .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  font-size: 26rpx;   
  color:#fff;
  background-color: #da2728;
  border-color: #da2728;
}