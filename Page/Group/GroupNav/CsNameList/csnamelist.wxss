/* Page/Group/GroupNav/CsNameList/csnamelist.wxss */
@import "iconfont_individual_details.wxss";
.tab-h{ height: 80rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #F7F7F7; font-size: 16px; white-space: nowrap;position: fixed;top: 0; left: 0; z-index: 99;border-bottom: 1px solid #efefef}
.tab-item{margin:0 36rpx;display: inline-block;}
.tab-item.active{color: #2196f3;position: relative;}
.tab-item.active:after{ content: "";display: block;height: 8rpx;width: 180rpx;background: #2196f3;position: absolute; bottom: 0;left: 5rpx;border-radius: 16rpx;}
.item-ans{ width: auto;justify-content: space-between; padding: 30rpx 30rpx 20rpx 30rpx;box-sizing: border-box; height: 160rpx;align-items: center;border-bottom: 1px solid #F2F2F2;}
.item-ans .group{display: block;width:55rpx;line-height:40rpx;font-size: 22rpx;border-bottom: 2px solid #2196f3;text-align: center;}
.item-ans .groupMes{display:block;width: auto;line-height: 30px;font-size: 22rpx;}
.item-ans .groupMes text{}
.iconright{float: right}

.avatar{width: 100rpx;height: 100rpx;position: relative;padding-right: 30rpx;}
.avatar .img{width: 100%;height: 100%;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 24rpx;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #2196f3; color:#2196f3;}
.tab-content{margin-top: 80rpx;}
.scoll-h{height: 100%;}


