.wrap .wrap_content .content_line .peoples::after{
  content: '人';
  display: inline-block;
  margin-right: 5px;
}
.wrap .wrap_content .content_line .bisai_status{
  padding: 2px 5px;
  background: rgb(77, 159, 226);
  border-radius: 4px;
  color: #fff;
  font-size: 11px;
}
/* .wrap .wrap_content .content_line .play_style{
  
