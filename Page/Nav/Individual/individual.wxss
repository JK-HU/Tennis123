.wrap .wrap_content .content_line .play_status{
    padding: 2px 5px;
    background: rgb(212, 72, 62);
    border-radius: 4px;
    color: #fff;
    font-size: 11px;
    margin:0 5px;
}
/* .wrap .wrap_content .content_line .times{} */
.wrap .wrap_content .content_line .place{
  font-size: 14px;
  color: rgb(75, 71, 71);
}




