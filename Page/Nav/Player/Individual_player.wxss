/* Page/Nav/player/Individual_player.wxss */
.body{width: 100%;height: auto;overflow: hidden}
.wrap{width: auto;height: auto;display: block;padding: 7px 16px;border-bottom: 1px solid rgb(216, 215, 215);}
.wrap .xuhao{width: 25px;height: 25px;line-height:25px;text-align: center;background-color: #2196f3;display: inline-block;margin-top:10px;margin-right: 12px;font-size: 13px;color:#FFF;border-radius:50%;float: left}
.wrap .content{width: 88%;height: 100%;display: inline-block;float: left}
.wrap .content .title{display: block;font-size: 16px;}
.wrap .content .jifen{font-size: 12px;color: #2196f3;margin-right: 10px;}
.wrap .content .jifen::before{content: '积分:';display: inline-block;color: #999;margin-right: 6px;}
.wrap .content .success{font-size: 12px;color: red}
.wrap .content .fail{font-size: 12px;color: #2196f3}
.wrap .content .success::after{content: '胜/';font-size: 12px;color: #999}
.wrap .content .fail::after{content: '败';font-size: 12px;color: #999}


